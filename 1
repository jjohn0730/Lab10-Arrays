#include <iostream>
#include <fstream>
#include <cstdlib>
#include <math.h>
using namespace std;

int main()
{

	srand(5); // initialize a random number seed to 5
	const int size = 100; // Note: this is a constant NOT a variable.
	int Values[size]; // Here is the array declaration
	int maxNum = -1;
	int maxIndex = -1;
	// Load the array
	for (int i = 0; i < size; i++)
	{
		Values[i] = (rand() % 100) + 1;
		cout << Values[i] << " ";

		if (Values[i] > maxNum) {
			maxNum = Values[i];
			maxIndex = i;
		}
		if (i % 10 == 0 && i !=0) { cout << endl; }
	}

	cout << endl << "Maximum number is: " << maxNum << " At Index: " << maxIndex << endl;
	
	cout << "I AM DONE! LET'S GO HOME!!!";
	system("pause");
	return 0;
}
